@model onlineWingStore.Models.CustomerTable
@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Menu
{
    <li><a href="/Home/Index">Home</a></li>
    <li><a href="/Home/Login">Login</a></li>
    <li><a href="/Home/SignUp">Sign Up</a></li>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}





<h2>Sign Up</h2>
<html>
    <body>
<div id="checking">Checking...</div>
<div>

    
             <form class="form-horizontal" role="form"action="/Home/SignupAction" method="post">
       	     	 <div class="form-group">
				    <label for="inputmane3" class="col-sm-2 control-label">User Name</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" name="UserName" id="UserName" placeholder="User Name" required>
                        <div id="result"></div>

				    </div>
				  </div>
                                                                       
                 
				  <div class="form-group">
				    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
				    <div class="col-sm-10">
				      <input type="email" class="form-control" id="eml" name="Email" placeholder="Email" required>
				    </div></div>

                       <div class="form-group">
				    <label for="inputEmail3" class="col-sm-2 control-label">Phone Number</label>
				    <div class="col-sm-10">
				      <input type="text" class="form-control" id="ph" name="Phone" placeholder="Phone Number" required>
				    </div>
				  </div>
				  <div class="form-group">
				    <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
				    <div class="col-sm-10">
				      <input type="password" class="form-control" id="pass" name="Password" placeholder="Password" required>
				    </div>
                     </div>

                  <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <button type="submit" class="btn btn-default">Sign Up</button>
				    </div>
				  </div>
                

  
</form>
         <div class="form-group">
				    <div class="col-sm-offset-2 col-sm-10">
				      <input type="button" class="btn btn-default" id="b1" value="Check Name" />
				    </div>


  
    

    @Scripts.Render("~/bundles/jquery")
    <script>

        $(document).ready(function () {

            $('#checking').hide();

            $('#b1').click(function () {
               
                var userName = $('#UserName').val();

                //alert('User Name ='+ userName);
                $('#checking').show();
                $.post("/Home/CheckUserName?UserName=" + userName, function (data)
               // $.post("/Home/CheckUserName",function (data)
                {
                    $('#checking').hide();
                    if (data) {
                        $('#result').text("User Name Not Available");
                        
                    }
                    else {
                        $('#result').text("User Name is Available");
                    }
                });

            });

        });
    </script>
</div>
    </body>
</html>


